<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="assets/stylesheets/application.css" />
    <title>Bookers index</title>
  </head>
  
  <body>
    <h1>Books</h1>
    <table class="table">
      <thead>
        <tr>
          <th class="t-title">Title</th>
          <th class="t-body">Body</th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>

        <td><%= link_to "Show",book_path(book.id) %></td>
        <td><%= link_to "Edit",edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
      </tbody>

    </table>


    <h1>New book</h1>
    <% if @book.errors.any? %>
      <div class="new-errors"><%= @book.errors.count %>errors occurred.</div>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model:@book do |f| %>
      <div class="new-title">Title</div>
      <%= f.text_field :title %>
      <div class="new-body">Body</div>
      <%= f.text_area :body %>
      <div class="submit"><%= f.submit 'Create Book' %></div>
    <% end %>
  </body>