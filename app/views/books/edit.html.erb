<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="edit-errors"><% @book.errors.count %>errors occurred.</div>
   <ul>
     <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
   </ul>
<% end %>

<%= form_with model:@book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>

  <%= link_to "Show",book_path(@book.id) %>
  <%= link_to "Back",books_path %>
<% end %>

